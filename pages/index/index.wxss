/**index.wxss**/
.container{
  padding: 0;
  position: relative;
}
.container .img{
  width: 100%;
  height: 150px;
}
.container .swiper{
  width: 90%;
  height: 160px;
  position: absolute;
  top: 10px;
}
.container .swiper swiper, .container .swiper image{
  width: 100%;
  height: 100%;
}
.container .contains{
  width: 100%;
}
.container .contains .servers{
  margin-top: 30px;
  text-align: center;
  margin-bottom: 15px;
}
.container .contains .icon{
  width: 20px;
  color: #fff;
  margin: 0 10px;
  text-align: center;
  background: #349AFF;
}
.container .contains text{
  font-size: 18px;
  font-weight: bold;
}
.container .navs{
  width: 90%;
  height: 160px;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  box-shadow: 0 8px 10px 2px rgba(210,227,235,0.50);
  border-radius: 10px;
  border: 1px solid #F9F8FE;
}
.container .navs .navs-dl{
  width: 25%;
  text-align: center;
}
.container .navs .navs-dl .navs-dt{
  width: 40px;
  height: 40px;
  color: #C2C2C2;
  margin: 5px auto;
  line-height: 40px;
  border-radius: 100%;
  border:1px solid #E1E1E1;
}
.container .navs .navs-dl .navs-dt:hover{
  background: #349AFF;
  color: #fff;  
}
.container .navs .navs-dl .navs-dd{
  font-size: 12px;
}
.active{
  background: #349AFF;
  color: #fff;
}