/* pages/invoice/invoice.wxss */
page{
  width: 100%;
  height: 100%;
}
.invoice{
  width: 100%;
  height: 100%;
  background: #F9F8FE;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.invoice image{
  position: absolute;
  top: 0;
  width: 100%;
  height: 200px;
}
.invoice-body{
  width: 345px;
  height: 246px;
  background: #FFFFFF;
  position: absolute;
  top: 20px;
  box-shadow: 0 8px 10px 2px rgba(188,209,233,0.50);
  border-radius: 4px;
}
.invoice-tit{
  width: 90%;
  margin-left:5%;
  text-align: center;
  line-height: 60px;
  font-size: 16px;
}
.invoice-cont{
  width: 90%;
  margin-left:5%;
  display: flex;
  flex-direction: column;
}
.invoice-cont .line{
  margin-top:5px;
  border-top: 1px solid #ccc;
}
.invoice-cont view{
  display: flex;
  font-size: 16px;
  line-height: 30px;
}
.invoice-cont view text:nth-child(1){
  flex:3;
  color:#C2C2C2;
}
.invoice-cont view text:nth-child(2){
  flex:7;
  color:#000F1C;
}
.footer{
  width: 100%;
  height: 50px;
  display:  flex;
}
.footer button{
  width: 42%;
  height: 30px;
  border-radius: 20px;
  border: 1px solid #349BFF;
  color: #349BFF;
  margin: 15px;
  text-align: center;
  line-height: 20px;
  font-size: 16px;
}

