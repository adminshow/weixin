/* pages/login/login.wxss */
page{
  width:100%;
  height:90%;
  background-image: linear-gradient(-40deg, #64CBFF 4%, #349BFF 83%);
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #000;
}
.login{
  width:90%;
  height:370px;
  background: #FFFFFF;
  box-shadow: 0 8px 10px 2px rgba(17,161,255,0.50);
  border-radius: 10px;
}
.flex-wrp{
  display: flex;
  flex-direction: column;
  width:100%;
  height: auto;
}
.flex-item{
  font-size: 14px;
  height:auto;
  line-height: 40px;
  display: flex;
  justify-content: center;
  margin-bottom:15px;
  position: relative;
}
.flex-item>input{
  width:80%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 25px;
  padding-left: 25px;
}
.flex-item:nth-child(2){
  position: relative;
}
.flex-item>span{
  position: absolute;
  right: 35px;
  top:1px;
  color:skyblue;
  font-size: 14px;
  font-weight: bold;
}
button{
  width: 90%;
  color:#fff;
  background: #349BFF;
  border-radius: 25px;
  font-size: 16px;
}
.flex-item-i{
  color:skyblue;
}
.flex-item>image{
  width:60%;
  height: 80px;
}
.icon-dianpu{
  position: absolute;
  left:25px;
  top: 3px;
}
.icon-daifukuan{
  position: absolute;
  left:25px;
  top: 3px;
}